generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Reservations {
  id       Int      @id @default(autoincrement())
  user     Users    @relation(fields: [userId], references: [id])
  userId   String
  branch   Branches @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int
  name     String
  phone    String
  service  String
  date     String
  time     String
}

model Reviews {
  id      Int    @id @default(autoincrement())
  name    String
  rating  Int
  comment String
}

model Users {
  id           String         @id
  name         String
  email        String
  phone        String
  password     String
  role         String
  Reservations Reservations[]
}

model Services {
  id       Int      @id @default(autoincrement())
  name     String
  duration Int
  branch   Branches @relation(fields: [branchId], references: [id], onDelete: Cascade)
  branchId Int
}

model Branches {
  id           Int            @id @default(autoincrement())
  name         String
  location     String
  openingtime  String
  closingtime  String
  Services     Services[]
  Reservations Reservations[]
}
